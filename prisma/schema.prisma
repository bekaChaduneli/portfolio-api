generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  role     Role   @default(ADMIN)
}

model Books {
  id          String   @id @default(cuid())
  title       String   @unique
  pages       String
  readedPages String
  description String
  image       String   @default("")
  relaseDate  DateTime
  author      String
  link        String
}

model GithubRepos {
  id          String @id @default(cuid())
  title       String @unique
  description String
  link        String
  stars       String
  language    String
}

model Linkedin {
  name       String      @unique
  bio        String
  image      String
  banner     String
  company    String
  university String
  link       String
  topSkils   TopSkills[]
  posts      Posts[]
}

model Posts {
  id           String    @id @default(uuid())
  Linkedin     Linkedin? @relation(fields: [linkedinName], references: [name])
  linkedinName String?
  createdAt    DateTime  @default(now())
  description  String
  image        String?
  likes        String
  commentsSum  String
  link         String
}

model TopSkills {
  id           String    @id @default(uuid())
  linkedin     Linkedin? @relation(fields: [linkedinName], references: [name])
  linkedinName String    @unique
  name         String    @unique
}
